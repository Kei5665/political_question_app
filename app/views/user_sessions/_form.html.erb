<%= form_with url: login_path, method: :post do |f| %>
  <div class="before:input-group input-group-outline">
    <%= f.label :email, class: "form-label justify-start" %><br/>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="before:input-group input-group-outline">
    <%= f.label :password, class: "form-label" %><br/>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="button button-pink mt-4" data-ripple-light="true">
    <%= f.submit "Login" %>
  </div>
<% end %>
